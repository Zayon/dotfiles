# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Use Super key as modifier
set $mod Mod4

# Use vim keys
set $left h
set $up k
set $down j
set $right l

# Custom configuration
hide_edge_borders both
workspace_auto_back_and_forth yes
focus_follows_mouse no

# workspaces vars
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"

# Terminal
# set $terminal i3-sensible-terminal
set $terminal urxvt

# Lancher
set $launcher i3-dmenu-desktop
# bindsym $mod+d exec --no-startup-id $launcher

# Screensaver
set $locker mate-screensaver-command -l
bindsym $mod+Shift+x exec $locker

# Explorer
set $explorer caja --no-desktop /home/$USER
bindsym $mod+n exec $explorer

# Guake 
bindsym Pause exec --no-startup-id guake -t
for_window [instance="guake"] floating enable

# Colors vars
set $win-bg-color        #8fa876
set $mint-text           #363636
set $bg-color 	         #8fa876
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $win-bg-color       $win-bg-color      $mint-text          #00ff00
# client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
# client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
# client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command conky -c $HOME/.config/i3/conkyrc

        verbose yes
        position top
        mode dock
        tray_output primary
        font pango:System San Francisco Display, FontAwesome 10

        colors {
                background $mint-text
                separator #757575
                #                  border             background         text
                focused_workspace  $win-bg-color      $win-bg-color      $mint-text
                inactive_workspace $mint-text $mint-text $inactive-text-color
                urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
        }
}

### Mouse Bindings ###

# The middle button over a titlebar kills the window
bindsym --release button2 kill
# The right button toggles floating
bindsym button3 floating toggle

### Custom Shortcuts ###

# Return to last workspace
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Shift+m exec i3-input -F 'mark %s' -P 'Mark name: '
bindsym $mod+m exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

bindsym $mod+shift+z move scratchpad
bindsym $mod+z scratchpad show

# Sreen brightness controls
#bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
