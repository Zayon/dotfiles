#!/bin/dash
set -u  #Detect undefined variable

command=$@

playerctl -i "plasma-browser-integration,chromium" $command
exit 0

player=$(playerctl metadata --format "{{ playerName }}")

if [ "$player" = "chromium" ]
then
    players=$(playerctl -l)

    for player in $players; do
        case "$player" in
            (*chromium*)
                continue 2
                ;;
        esac

        case "$player" in
            (*plasma-browser-integration*)
                playingUrl=$(playerctl -p $player metadata --format "{{ xesam:url }}")
                case "$playingUrl" in
                    (*youtube*)
                        playerctl -p $player $command
                        exit 0
                        ;;
                esac
                continue 2
                ;;
        esac


        # echo "$player playing $playingUrl"

        if [ "$player" = "spotify" ]
        then
            playerctl -p $player $command
            exit 0
        fi
    done

    exit 0
fi

# playerctl $command
exit 0

if [ "$player" = "chromium" ]
then
    album=$(playerctl metadata --format "{{ album }}")

    if [ "$album" = "https://app.gather.town" ];
    then
        playerctl -p "spotify" $command
    else
        playerctl $command
    fi
fi

# IFS=" " set $metadata
