### Mouse Bindings ###

# The middle button over a titlebar kills the window
bindsym --release button2 kill

### Custom Shortcuts ###

bindsym $mod+y move workspace to output left
bindsym $mod+u move workspace to output right

# Navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+$right workspace next
bindsym $mod+Ctrl+Left workspace prev
bindsym $mod+Ctrl+$left workspace prev

# toggle sticky
bindsym $mod+Shift+s sticky toggle

# Return to last workspace
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+shift+z move scratchpad
bindsym $mod+z scratchpad show

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym $mod+grave exec --no-startup-id playerctl play-pause      # Play/Pause Spotify Win+` US classic
bindsym $mod+dead_grave exec --no-startup-id playerctl play-pause # Play/Pause Spotify Win+` internationnal

# Sound controls # https://faq.i3wm.org/question/3747/enabling-multimedia-keys/?answer=3759#post-id-3759
bindsym $mod+KP_Subtract exec --no-startup-id amixer -D pulse sset Master 5%+ # monter le son Win+-
bindsym $mod+KP_Add exec --no-startup-id amixer -D pulse sset Master 5%-      # baisser le son Win++
bindsym $mod+KP_Divide exec --no-startup-id amixer -D pulse sset Master 0%    # mute sound Win+/
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master 0% # mute sound

# Toogle wifi
bindsym XF86WLAN exec --no-startup-id $HOME/.config/i3/wifi.sh

# Program Workspaces
assign [class="jetbrains-phpstorm"] $workspace3
assign [class="Slack"] $workspace9

# Auto start
exec --no-startup-id nm-applet &
exec --no-startup-id redshift-gtk -l 48.51:2.20 -t 6000:3000 &
exec --no-startup-id xcompmgr &

# Natural Scroll
# exec --no-startup-id synclient VertScrollDelta=-111
# Middle click on 3 finger tap on touchpad
# exec --no-startup-id synclient TapButton2=3
# exec --no-startup-id synclient TapButton3=2
# Set keyboard layout
# exec --no-startup-id setxkbmap -variant intl
# Make caps lock acts like Super key
# exec --no-startup-id setxkbmap -option caps:super
# Make caps lock acts like Control key
exec --no-startup-id setxkbmap -option caps:ctrl_modifier

# Slack calls window
for_window [class="Slack" floating] move container to workspace current

